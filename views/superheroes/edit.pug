extends ../layout.pug

block content
  .create-container
    h3 Edit The Image: #{superhero.name}
    br
    .card.mb-3(style='max-width: 100%;')
      .row.no-guttersImage
        .col-md-4
          //- img.card-img(src='...' alt='...')
          if superhero.image.startsWith('http')
            img#show-img.card-img.mx-auto(src=superhero.image alt='Image')    
          else
            img#show-img.card-img.mx-auto(src='/img/superheroes/'+ superhero.image alt='Image')
        .col-md-8
          .card-body
            form(action="/superheroes/" + superhero.id + "?_method=PUT",  method="post", enctype="multipart/form-data")
              .form-group
                label(for='charaterName') Image Name: 
                input#charaterName.from-control(type="text" value=superhero.name placeholder="charater name" required="required" name="superhero")
              .form-grop
                label(for='characterPicture') Image File: 
                input#exampleFormControlFile1.form-control-file(type="file" name="file" placeholder="charater picture" accept="image/*")
              .form-group
                label(for='charaterDecription') Image Decription: 
                textarea#charaterDecription.form-control(rows='5' name="description")= superhero.description
              .form-group
                  button.btn.btn-lg.btn-primary.btn-block Update
          
      a(href='javascript:history.back()') Go Back  
      

