extends ../layout.pug

block content
      
  h3.text-center Add New Comment to #{superhero.name}
  
  div(style='width: 50%; margin: 25px auto;')
    form(action="/superheroes/"+ superhero.id + "/comments" method='POST')
      .form-group
        input.form-control(type='text' name='comment[text]' placeholder='comment')
      //- .form-group
      //-   input.form-control(type='text' name='comment[author]' placeholder='author')
      .form-group
        button.btn.btn-lg.btn-primary.btn-block Submit!
    a(href='javascript:history.back()') Go Back